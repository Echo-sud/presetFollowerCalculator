#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    
    int startingFollowers = 12000; 
    int newFollowers = startingFollowers * .35; 
    int totalFollowers = newFollowers + startingFollowers; 
    
   
    cout << "Marcelo started the week with " << startingFollowers << " followers.\n";
    cout << "He gained " << newFollowers << " followers this week.\n";
    cout << "He ended the week with " << totalFollowers << " total followers.\n";
    
}
